<% if current_user.user_image_id.nil? %>
  <%= link_to gravatar_for(current_user, size: 50), current_user %>
<% else %>
  <%= link_to user_path(current_user) do %>
    <%= attachment_image_tag current_user, :user_image, :fill, 50, 50, format: 'jpeg', alt: "ユーザー画像", class: "user_image_small" %>
  <% end %>
<% end %>
<h1><%= current_user.user_name %></h1>
<span><%= link_to "ユーザーページへ移動", current_user %></span>
<span><%= current_user.posts.count %>件の投稿</span>