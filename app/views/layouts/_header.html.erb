<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "HistoryPost", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <%= render 'layouts/search' %>
        <li><%= link_to "ホーム", root_path, class: "fas fa-home" %></li>
        <li><%= link_to "ヘルプ", help_path, class: "fas fa-question-circle" %></li>
        <% if logged_in? %>
          <li><%= link_to "ユーザー", users_path, class: "fas fa-users" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle fas fa-user" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ", current_user %></li>
              <li><%= link_to "ユーザー情報変更", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, class: "fas fa-sign-in-alt" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>