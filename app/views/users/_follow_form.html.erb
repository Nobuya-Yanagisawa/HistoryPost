<% if current_user?(@user) %>
	<%= link_to "新しい解説を投稿する", new_post_path, class: "btn btn-primary btn_new_post" %>
<% else %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'users/unfollow' %>
  <% else %>
    <%= render 'users/follow' %>
  <% end %>
  </div>
<% end %>