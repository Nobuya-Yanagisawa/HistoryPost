<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.user_name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "このユーザーを削除する", user, method: :delete,
                                  data: { confirm: "ユーザー：#{user.user_name} の削除を実行しますか?" } %>
  <% end %>
</li>