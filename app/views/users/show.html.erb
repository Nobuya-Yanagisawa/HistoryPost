<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <% if @user.user_image_id.nil? %>
          <%= gravatar_for @user %>
        <% else %>
          <%= attachment_image_tag @user, :user_image, :fill, 80, 80, format: 'jpeg', alt: "ユーザー画像", class: "user_image" %>
        <% end %>
        <%= @user.user_name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
  </aside>
  <div class="col-md-9">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>