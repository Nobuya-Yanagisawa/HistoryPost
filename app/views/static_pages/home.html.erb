<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <%= link_to "新しい解説を投稿する", new_post_path, class: "btn btn-primary btn_new_post" %>
    </aside>
    <div class="col-md-9">
      <h3>新着情報</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="row">
  	<div class="center jumbotron">
  	  <h1>HistoryPost</h1>

  	  <h2>みんなで教えあいながら歴史を学んでみませんか？</h2>

  	  <%= link_to "ユーザー登録して始めましょう！", signup_path, class: "btn btn-lg btn-success" %>
  	</div>

    <div class="home_posts col-md-8 col-md-offset-2">
      <h3>新着解説</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= link_to "ユーザー登録するとすべての解説が見られるようになります", signup_path %>
    </div>
  </div>
<% end %>